<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/five_dp"
    android:layout_marginTop="@dimen/five_dp"
    android:layout_marginEnd="@dimen/five_dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:id="@+id/lyt_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_item"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/five_dp"
            app:roundAsCircle="false"
            fresco:roundedCornerRadius="7dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/img_item">
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_description"
                android:drawablePadding="@dimen/five_dp"
                android:text="Deliver Item To so and so"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/primary_text"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:drawableStart="@drawable/ic_pin_drop"
                android:drawablePadding="@dimen/five_dp"
                android:text="Northemberland"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/secondary_text"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>